# Server Configuration
NODE_ENV=development
PORT=5001
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_COOKIE_EXPIRES_IN=1

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-super-secure-session-secret-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Subscription Management
SUBSCRIPTION_CHECK_CRON=0 */6 * * *

# Email Provider (Resend only)
# We now use Resend exclusively for sending emails

# Default FROM name/email for emails sent via Resend
FROM_NAME=GoChart
FROM_EMAIL=noreply@gochart.in

# Resend Email Configuration
# IMPORTANT: set this to your real Resend secret key in your local .env / Render env
RESEND_API_KEY=re_AiPH75Yc_47YpWxHPuaYpdV2ErgQpuKyU
# Must be an address on your verified domain (gochart.in)
RESEND_FROM_EMAIL=noreply@gochart.in
RESEND_FROM_NAME=GoChart

# Frontend URL
FRONTEND_URL=http://localhost:5173

# OTP and Email Settings
OTP_EXPIRY_MINUTES=10
EMAIL_VERIFY_EXPIRY_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
